// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String     @id
  fullName String
  teams    UserTeam[]
  Shoutout Shoutout[]
}

model Team {
  id        String     @id @default(uuid())
  name      String     @unique
  users     UserTeam[]
  shoutouts Shoutout[]
}

model UserTeam {
  user   User   @relation(fields: [userId], references: [id])
  userId String
  team   Team   @relation(fields: [teamId], references: [id])
  teamId String

  @@id([userId, teamId])
}

model Shoutout {
  id       String @id @default(uuid())
  shoutout String
  user     User   @relation(fields: [userId], references: [id])
  userId   String
  team     Team   @relation(fields: [teamId], references: [id])
  teamId   String
  authorId String
}
